<!DOCTYPE html>
<html>
  <head>
    <title>Esabako</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_bundle_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_bundle_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      <%= link_to 'esabako', root_path, class: 'navbar-brand' %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <% unless user_signed_in? %>
            <%= link_to 'Login', user_esa_omniauth_authorize_path, class: 'nav-link' %>
          <% else %>
            <%= link_to 'Logout', destroy_user_session_path, class: 'nav-link' %>
          <% end %>
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
